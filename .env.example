# Transcriper Environment Variables
# Copy this file to .env and fill in your values

# Hugging Face Authentication Token for pyannote.audio
# Get your token from: https://huggingface.co/settings/tokens
# Required for speaker diarization with pyannote pipeline
HUGGINGFACE_TOKEN=your_token_here

# Optional: Device for ML processing
# Options: cpu, cuda, mps (Apple Silicon)
# Default: auto-detect (mps on macOS, cpu elsewhere)
PYANNOTE_DEVICE=mps

# Optional: Pyannote model version for speed vs accuracy tradeoff
# Options: 2.1 (faster, ONNX-based), 3.1 (slower, more accurate)
# Default: 2.1 (recommended for real-time performance)
PYANNOTE_VERSION=2.1